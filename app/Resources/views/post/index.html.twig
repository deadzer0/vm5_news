{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center">
        <h1>News list</h1>
    </div>
    <div class="text-left">
        {% if is_granted('ROLE_ADMIN', 'ROLE_MODERATOR') %}
            <a href="{{ path('post_new') }}" class="btn btn-primary">Създай новина</a>
        {% endif %}
        <hr>
    </div>


    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Resume</th>
                <th>Body</th>
                <th>Created at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.title }}</td>
                <td>{{ post.resume }}</td>
                <td>{{ post.body }}</td>
                <td>{% if post.createdAt %}{{ post.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('post_show', { 'id': post.id }) }}">show</a>
                        </li>
                        {% if is_granted('ROLE_ADMIN', 'ROLE_MODERATOR') %}
                        <li>
                            <a href="{{ path('post_edit', { 'id': post.id }) }}">edit</a>
                        </li>
                        {% endif %}
                    </ul>
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr>
{% endblock %}
